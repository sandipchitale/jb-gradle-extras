<!-- Plugin Configuration File: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN, cannot be changed between the plugin versions. -->
    <id>dev.sandipchitale.jb-gradle-extras</id>

    <!-- Public plugin name should be written in Title Case.
        Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Gradle Extras</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor
            email="sandipchitale@gmail.com"
            url="https://github.com/sandipchitale">Sandip Chitale
    </vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
        Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        Adds action to show detailed help related to the selected Gradle task in Gradle toolwindow.
    ]]></description>

    <!-- Product and plugin compatibility requirements.
        Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <dependencies>
        <plugin id="com.intellij.modules.platform"/>
        <plugin id="com.intellij.gradle"/>
    </dependencies>

    <change-notes><![CDATA[
        <h2>New Features</h2>
        <ul>
            <li>Adds action to show detailed help related to the selected Gradle task in Gradle toolwindow.</li>
        </ul>
        <h2>Features</h2>
        <ul>
            <li>Adds action to show detailed help related to the selected Gradle task in Gradle toolwindow.</li>
        </ul>
        <h2>Known Bugs</h2>
        <ul>
            <li>None.</li>
        </ul>
        <h2>Bug Fixes</h2>
        <ul>
            <li>None yet.</li>
        </ul>
        ]]>
    </change-notes>

    <!-- Extensions defined by the plugin.
        Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action id="dev.sandipchitale.jbgradleextras.GradleTaskHelpAction"
                class="dev.sandipchitale.jbgradleextras.GradleTaskHelpAction"
                text="Show Help for Gradle Task"
                icon="AllIcons.Nodes.Interface"
                description="Runs 'gradle -q help --task taskName'.">

            <add-to-group group-id="Gradle.View.ActionsToolbar.OtherActionsPanel" anchor="last"/>
        </action>
    </actions>
</idea-plugin>